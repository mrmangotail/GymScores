@model IEnumerable<GymScores.Domain.Entities.Meet>

@{
    ViewBag.Title = "Meets";
}

<h2>Meets</h2>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Location</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        { 
            <tr>
                <td>@m.MeetDate.ToShortDateString()</td>
                <td>@Html.ActionLink(m.Name, "Details", new { meetID = m.MeetID })</td>
                <td>@m.Location</td>
                <td>@Html.ActionLink("Results", "Results", new { meetID = m.MeetID }, new { @target = "_blank" })</td>
            </tr>
        }
    </tbody>
</table>